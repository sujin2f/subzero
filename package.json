{
    "name": "subzero",
    "description": "Keep Your Groceries Fresh and Cool",
    "version": "1.0.0",
    "license": "MIT",
    "dependencies": {
        "connect-mongodb-session": "^3.1.1",
        "dotenv": "^10.0.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "express-graphql": "^0.12.0",
        "express-session": "^1.17.2",
        "googleapis": "^89.0.0",
        "graphql": "^16.0.1",
        "module-alias": "^2.2.2",
        "mongoose": "^6.0.12",
        "path": "^0.12.7",
        "ts-node": "^10.4.0",
        "tslint": "^6.1.3",
        "typescript": "^4.4.4"
    },
    "devDependencies": {
        "@apollo/client": "^3.4.16",
        "@types/ejs": "^3.0.6",
        "@types/express": "^4.17.7",
        "@types/express-session": "^1.17.4",
        "@types/node": "^14.0.22",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-router-dom": "^5.1.5",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "concurrently": "^5.2.0",
        "cross-fetch": "^3.1.4",
        "node-sass": "^6.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^4.0.3",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^1.0.0-pre.50",
        "tslint-config-prettier": "^1.18.0",
        "ttypescript": "^1.5.10",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.12"
    },
    "main": "build/server/index.js",
    "scripts": {
        "dev": "npm-run-all -s dev:clean dev:watch",
        "dev:clean": "rimraf dist/*",
        "dev:watch": "concurrently --kill-others-on-fail \"yarn dev:node\" \"yarn dev:react\"",
        "dev:node": "NODE_ENV=development ts-node-dev --compiler ttypescript --respawn ./src/server/index.ts",
        "dev:react": "NODE_ENV=development webpack --watch",
        "build": "npm-run-all -s build:clean build:tsc build:webpack",
        "build:clean": "rimraf build/*",
        "build:webpack": "NODE_ENV=production webpack",
        "build:tsc": "tsc --project tsconfig.production.json",
        "prod": "NODE_ENV=production node build/server/index.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "_moduleAliases": {
        "src": "build"
    }
}
